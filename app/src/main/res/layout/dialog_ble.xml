<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_back_white">

<TextView
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="블루투스 연결"
    android:textSize="20dp"
    android:textColor="#000000"
    android:textStyle="bold"
    />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id='@+id/tvBLE1'
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="EMS HomeT 1(배)"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textColor="#000000"
            />


        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/btnBLE1"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#000000"
            android:id="@+id/Battery1"
            android:visibility="visible"
            android:background="@drawable/icon_battery5"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/btnBLE1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_back_pinkred"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="기기 연결"
            android:layout_marginRight="30dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9a0d1e"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id='@+id/tvBLE2'
