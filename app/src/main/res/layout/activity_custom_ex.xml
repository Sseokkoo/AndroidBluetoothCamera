<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <!--    액션바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/close"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_back_nor"
            android:layout_gravity="left|center"

            />
        <TextView
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개인 맞춤 운동"
            android:textSize="17.5sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/top_bg"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_man"
            />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




<!--    수축-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="수축"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginRight="25dp"
            />
        <Button
            android:id="@+id/minus1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_minus_click"
            />
        <TextView
            android:id="@+id/edtCount1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <Button
            android:id="@+id/plus1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_plus2_click"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SEC"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            />
    </LinearLayout>

    <!--    이완-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="이완"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginRight="25dp"
            />
        <Button
            android:id="@+id/minus2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_minus_click"
            />
        <TextView
            android:id="@+id/edtCount2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <Button
            android:id="@+id/plus2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_plus2_click"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SEC"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            />
    </LinearLayout>





    <!--    횟수-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="횟수"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginRight="25dp"
            />
        <Button
            android:id="@+id/minus4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_minus_click"
            />
        <EditText
            android:id="@+id/edtCount4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="number"
            android:maxLength="2"

            />

        <Button
            android:id="@+id/plus4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_plus2_click"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="000"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="invisible" />
    </LinearLayout>



        <!--    세기-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="세기"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginRight="25dp"
                android:visibility="invisible"
                />
            <Button
                android:id="@+id/minus3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_minus_click"
                />
            <Button
                android:id="@+id/play"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_play_click"
                />

            <Button
                android:id="@+id/plus3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_plus2_click"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="000"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dp"
                android:visibility="invisible"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="25dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_margin="20dp"
                android:progress="0"
                android:progressTintMode="src_in"
                android:id="@+id/progress_bar"
                android:max="100"
                        android:progressDrawable="@drawable/progress_bar_state"

            />


<!--            android:progressTint="#C90000"-->
<!--            android:progressBackgroundTint="#489CFF"-->


        </LinearLayout>


<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="25dp"-->
<!--            android:background="@drawable/my_gradient"-->
<!--            android:layout_margin="20dp"/>-->

        <Button
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/btnSSTStart"
            />
    </LinearLayout>
    </ScrollView>


</LinearLayout>