<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/button_back_gray_gray_stoke"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="운동 시간 설정"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        >
        <Button
            android:background="@drawable/button_back_gray_gray_stoke"
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="14dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a : "
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:id="@+id/tvsetTimeWhat"
            />

        <TextView
            android:id="@+id/tvsetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="5"
            android:textSize="18dp"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            />
        <Button
            android:background="@drawable/button_back_gray_gray_stoke"
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="14dp"
            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/SetMin21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_back_red"
            android:gravity="center"
            android:text="21\nmin"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SetMin26"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_back_red"
            android:text="26\nmin"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/SetMin31"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_back_red"
            android:text="31\nmin"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:id="@+id/Success"
            android:background="@drawable/button_back_gray2"
            android:layout_marginRight="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:id="@+id/Cancel"
            android:background="@drawable/button_back_gray2"
            android:layout_marginLeft="5dp"
            />



    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="14dp"
        android:textColor="#000000"
        android:background="@drawable/btn_cancel_click"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

</LinearLayout>