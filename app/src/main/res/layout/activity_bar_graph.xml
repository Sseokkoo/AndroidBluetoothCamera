<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/close"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_back_nor"
            android:layout_gravity="left|center"

            />
        <TextView
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 운동기록 관리"
            android:textSize="17.5sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ooo 님 운동시간 그래프"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_back_white"
        android:layout_margin="5dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020.09.03 ~ 2020.09.12"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/tvDate"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="단위 (분)"
        android:gravity="right"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="80dp"
            android:orientation="vertical"
            >

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/total_bar_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        />
            <TextView
                android:id="@+id/xValue"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="단위(월)"
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="14.5sp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:background="#00000000"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@drawable/button_back_pinkred_circle"
                    />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근육"
                    android:textSize="14.5sp"
                    android:textColor="#000000"
                    />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@drawable/button_back_purple_circle"
                    />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다이어트"
                    android:textSize="14.5sp"
                    android:textColor="#000000"
                    />

            </LinearLayout>
        </FrameLayout>


    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날짜 선택하기"
        android:layout_gravity="bottom"
        android:background="@drawable/button_back_red"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        />

    </FrameLayout>

</LinearLayout>